{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "jsx": "react",
        "strict": true,
        "declaration": true,
        "outDir": "dist",
        "rootDir": "src",
        "moduleResolution": "nodenext",
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "declarationDir": "dist",
        "declarationMap": true,
        "esModuleInterop": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}